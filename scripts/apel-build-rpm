#!/bin/bash

rpmdev-setuptree

RPMDIR=/home/rpmb/rpmbuild
VERSION=1.6.0-0.4.rc4
APELDIR=apel-$VERSION

# Remove old sources and RPMS
rm -f $RPMDIR/SPECS/*
rm -f $RPMDIR/SOURCES/*
rm -f $RPMDIR/SRPMS/*
rm -f $RPMDIR/RPMS/noarch/*

FILE=$VERSION

wget --no-check-certificate https://github.com/apel/apel/archive/$VERSION.tar.gz -O $FILE

tar xzvf $FILE
rm $FILE

tar czvf $APELDIR.tar.gz $APELDIR
cp $APELDIR.tar.gz $RPMDIR/SOURCES
cp $APELDIR/apel.spec $RPMDIR/SPECS

rpmbuild -ba $RPMDIR/SPECS/apel.spec

# Clean up
rm -rf apel-$VERSION*
